{
    "name": "copyplaintext",
    "displayName": "CopyPlainText",
    "description": "Copy plain text with no formatting.",
    "icon": "icon.png",
    "version": "1.1.1",
    "license": "Apache-2.0",
    "publisher": "p26frqxxfmwrzekd6c6fcty5kipjkr3gaeejzpkyy42p5udjkjyq",
    "repository": {
        "type": "git",
        "url": "https://github.com/xan1000/CopyPlainText"
    },
    "homepage": "https://github.com/xan1000/CopyPlainText",
    "engines": {
        "vscode": "^1.55.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.copyPlainText"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyPlainText",
                "title": "Copy Plain Text"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.copyPlainText",
                    "when": "editorHasSelection"
                }
            ],
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "extension.copyPlainText",
                    "group": "9_cutcopypaste@2"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.copyPlainText",
                "key": "ctrl+alt+c",
                "when": "editorHasSelection"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.1",
        "@types/vscode": "^1.55.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "glob": "^7.1.6",
        "mocha": "^8.3.2",
        "typescript": "^4.2.4",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "copy-paste": "^1.3.0"
    }
}
